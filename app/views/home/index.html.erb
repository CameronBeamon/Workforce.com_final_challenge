<% if @user%>
<div>
<p>You are logged in as:</p><%= @user.name%><%= button_to "Logout", logout_path, method: :delete %>
</div>
<br>
 <% @organisation.each do |org| %>
 <div>
   <ul>
     <li>
       <%= org.name %> <%= link_to "Edit"%><%= link_to "Join"%>
     </li>
   </ul>
 </div>
 <% end %> 

 <%=form_with url: org_path do |form|%>
   <div>
  <p>Name:</p>
  <%= form.text_field :name %>
  </div>
    <div>
  <p>Hourly rate: $</p>
  <%= form.number_field :hourly_rate%>
  </div>
  <%= form.submit "Create and Join"%>
 <% end %>


<% end %>